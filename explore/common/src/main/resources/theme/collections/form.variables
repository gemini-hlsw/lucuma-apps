@selectColor: @gray-lighter;
@inputColor: var(--form-input-color);
@textAreaFocusColor: @gray-darker;
@inputFocusColor: var(--form-input-focus-color);

// Use a reduced padding
@tightInputVerticalPadding: (@tightVerticalPadding + ((1em - @inputLineHeight) / 2));
@inputPadding: @tightInputVerticalPadding @tightHorizontalPadding;

@selectPadding: 0.62em @tightHorizontalPadding;

@textAreaPadding: @tightVerticalPadding @tightHorizontalPadding;

@inputBackground: var(--form-input-background);
@inputFocusBorderColor: var(--form-input-focus-border-color);
@inputFocusBoxShadow: var(--form-input-focus-box-shadow);

@promptTextColor: var(--form-prompt-text-color);
@promptBackground: var(--form-prompt-background);
