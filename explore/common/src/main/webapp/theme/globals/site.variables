// vite with SUI has troubles loading fonts
@importGoogleFonts: false;

@color-gray-dark: #3A3F44;
@color-gray-darker:  #272b30;

@gray-base: #000;
@gray-darker: #272B30;
@gray-dark: var(--gray-dark);
@gray: var(--gray);
@gray-light: #7A8288;
@gray-lighter: #999;
@primaryColor: @gray-light;
@positiveColor: #62c462;
@warningColor: #f89406;
@negativeColor: #ee5f5b;
@pageBackground: var(--site-page-background);
@linkColor: #fff;
@linkHoverColor: #fff;
@padding-base-vertical: 8px;
@padding-large-vertical: 14px;
@invertedDisabledTextColor: #ccc;
@disabledBorderColor: rgba(0, 0, 0, 0.6);
@positiveTextColor: #fff;
@positiveBackgroundColor: #62c462;
@infoTextColor: #fff;
@infoBackgroundColor: @infoColor;
@warningTextColor: #fff;
@warningBackgroundColor: #f89406;
@warningBorderColor: darken(spin(@warningBackgroundColor, -10), 3%);
@negativeTextColor: #fff;
@negativeBackgroundColor: #ee5f5b;
@negativeBorderColor: darken(spin(@negativeBackgroundColor, -10), 3%);


@darkTextColor               : var(--dark-text-color);
@invertedMutedTextColor              : rgba(0, 0, 0, 0.6);
@invertedLightTextColor              : rgba(0, 0, 0, 0.4);

@invertedUnselectedTextColor         : rgba(0, 0, 0, 0.4);
@invertedHoveredTextColor            : rgba(0, 0, 0, 0.8);
@invertedPressedTextColor            : rgba(0, 0, 0, 0.9);
@invertedSelectedTextColor           : rgba(0, 0, 0, 0.95);
@invertedDisabledTextColor           : rgba(0, 0, 0, 0.2);

@textColor           : var(--site-text-color);
@mutedTextColor      : rgba(255, 255, 255, 0.8);
@lightTextColor      : rgba(255, 255, 255, 0.7);
@unselectedTextColor : rgba(255, 255, 255, 0.5);
@hoveredTextColor    : var(--site-hovered-text-color);
@pressedTextColor    : rgba(255, 255, 255, 1);
@selectedTextColor   : rgba(255, 255, 255, 1);
@disabledTextColor   : rgba(255, 255, 255, 0.2);

@borderColor: var(--site-border-color);
@solidBorderColor: var(--site-solid-border-color);

@floatingShadow:
  0px 0px 1px 2px rgba(221, 219, 217, .8)
;

@tightVerticalPadding   : @relative5px;
@tightHorizontalPadding : @relative6px;

// References to css color variables
@inputColor: var(--site-input-color);
@inputPlaceholderFocusColor: var(--site-input-placeholder-focus-color);
@inputPlaceholderColor: var(--site-input-placeholder-color);

@inputHighlightBackground: var(--site-input-highlight-background);
@inputHighlightColor: var(--site-input-highlight-color);

@disabledOpacity: var(--site-disabled-opacity);

/*-------------------
  Highlighted Text
--------------------*/

@highlightBackground      : var(--site-highlight-background);
@highlightColor           : var(--site-text-color);

@inputHighlightBackground : var(--site-input-highlight-background);
@inputHighlightColor      : var(--site-text-color);

