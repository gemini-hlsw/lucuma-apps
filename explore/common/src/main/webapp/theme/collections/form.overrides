/*******************************
         Theme Overrides
*******************************/
/*--------------------
        Field
---------------------*/

.ui.modal .field {
  clear: both;
  margin: @fieldMargin;
}

.ui.modal .fields .fields,
.ui.modal .field:last-child,
.ui.modal .fields:last-child .field {
  margin-bottom: 0;
}

.ui.modal .fields .field {
  clear: both;
  margin: 0;
}

/*--------------------
        Labels
---------------------*/

.ui.modal .field > label {
  display: block;
  margin: @labelMargin;
  color: @labelColor;
  font-size: @labelFontSize;
  font-weight: @labelFontWeight;
  text-transform: @labelTextTransform;
}

/*--------------------
    Standard Inputs
---------------------*/


.ui.modal textarea,
.ui.modal input:not([type]),
.ui.modal input[type="date"],
.ui.modal input[type="datetime-local"],
.ui.modal input[type="email"],
.ui.modal input[type="number"],
.ui.modal input[type="password"],
.ui.modal input[type="search"],
.ui.modal input[type="tel"],
.ui.modal input[type="time"],
.ui.modal input[type="text"],
.ui.modal input[type="file"],
.ui.modal input[type="url"] {
  width: @inputWidth;
  vertical-align: top;
}

/* Set max height on unusual input */
.ui.modal ::-webkit-datetime-edit,
.ui.modal ::-webkit-inner-spin-button {
  height: @inputLineHeight;
}

.ui.modal input:not([type]),
.ui.modal input[type="date"],
.ui.modal input[type="datetime-local"],
.ui.modal input[type="email"],
.ui.modal input[type="number"],
.ui.modal input[type="password"],
.ui.modal input[type="search"],
.ui.modal input[type="tel"],
.ui.modal input[type="time"],
.ui.modal input[type="text"],
.ui.modal input[type="file"],
.ui.modal input[type="url"] {
  font-family: @inputFont;
  margin: 0;
  outline: none;
  -webkit-appearance: none;
  -webkit-tap-highlight-color:  rgba(255, 255, 255, 0);

  line-height: @inputLineHeight;
  padding: @inputPadding;
  font-size: @inputFontSize;

  background: @inputBackground;
  border: @inputBorder;
  color: @inputColor;
  border-radius: @inputBorderRadius;
  box-shadow: @inputBoxShadow;
  transition: @inputTransition;
}

/*--------------------
       UI Input
---------------------*/

/* Block */
.ui.modal .field .ui.input,
.ui.modal .fields .field .ui.input,
.ui.modal .wide.field .ui.input {
  width: 100%;
}

/* Auto Input */
.ui.modal .fields .field .ui.input input,
.ui.modal .field .ui.input input {
  width: auto;
}

/* Full Width Input */
.ui.modal .ten.fields .ui.input input,
.ui.modal .nine.fields .ui.input input,
.ui.modal .eight.fields .ui.input input,
.ui.modal .seven.fields .ui.input input,
.ui.modal .six.fields .ui.input input,
.ui.modal .five.fields .ui.input input,
.ui.modal .four.fields .ui.input input,
.ui.modal .three.fields .ui.input input,
.ui.modal .two.fields .ui.input input,
.ui.modal .wide.field .ui.input input {
  flex: 1 0 auto;
  width: 0;
}

