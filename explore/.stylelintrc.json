{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-value-no-unknown-custom-properties",
    "stylelint-color-format"
  ],
  "rules": {
    "color-format/format": {
      "format": "hsla"
    },
    "csstools/value-no-unknown-custom-properties": [
      true,
      {
        "importFrom": ["vars.css"]
      }
    ]
  }
}
